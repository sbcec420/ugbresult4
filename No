  <script>
  function downloadPDF() {
  const roll = document.getElementById('rollInput').value.trim().toUpperCase();
  
  const rollToPDF = {
  "2523EDCMJ0248": "https://drive.google.com/file/d/1-wG2AIqWef1TQsgjqORtRNXzlw17pG8T/view?usp=drivesdk",
  "2523EDCMJ0423": "https://drive.google.com/uc?export=download&id=1MRYdKYsMiyV81DJRpu6Gg7bq6CwVAnw2",
  "2523ENGMJ0027": "https://drive.google.com/uc?export=download&id=1HJ2l8gLRW7sOyTWr_p32zOesivZaf0AB",
  "2523ENGMJ0028": "https://drive.google.com/uc?export=download&id=1uqxz2UPKzBGoxkZBF8KcWq4IjPbSuyqF",
  "2523ENGMJ0029": "https://drive.google.com/uc?export=download&id=1L4j7KHKxQ5B5E7qIDPbDgCknR6epNUe3"
  };
  
  if (rollToPDF[roll]) {
  window.location.href = rollToPDF[roll];
  } else {
  alert("Invalid roll number or result not found.");
  }
  }
  </script>
